<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ECECEC"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:orientation="vertical" >
        <ScrollView
            android:id="@+id/SView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:clickable="true">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
                
                
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:background="@drawable/num"
                    android:orientation="vertical"
                    android:padding="5dip" >
                    <TextView
                       
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/right_arrow"
                        android:padding="5dip"
                        android:text="订单详情"
                        android:textColor="#6D6D6D"
                        android:textSize="16dp" />
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/product_detail_new_line" />
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="2.5dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="5dip" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单号:"
                            android:textColor="#6D6D6D"
                            android:textSize="16dp" />
                        <TextView
                            android:id="@+id/orderview_orderid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:textColor="#CA0606"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="2.5dip" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单状态:"
                            android:textColor="#6D6D6D"
                            android:textSize="16dp" />
                        <TextView
                            android:id="@+id/orderview_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:textColor="#909090"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="2.5dip" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生成时间:"
                            android:textColor="#6D6D6D"
                            android:textSize="16dp" />
                        <TextView
                            android:id="@+id/orderview_createtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:textColor="#909090"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="2.5dip" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人姓名:"
                            android:textColor="#6D6D6D"
                            android:textSize="16dp" />
                        <TextView
                            android:id="@+id/orderview_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:textColor="#909090"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="2.5dip" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货地址:"
                            android:textColor="#6D6D6D"
                            android:textSize="16dp" />
                        <TextView
                            android:id="@+id/orderview_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:textColor="#909090"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="2.5dip" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号码:"
                            android:textColor="#6D6D6D"
                            android:textSize="16dp" />
                        <TextView
                            android:id="@+id/orderview_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:textColor="#909090"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="2.5dip" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总价:"
                            android:textColor="#6D6D6D"
                            android:textSize="16dp" />
                        <TextView
                            android:id="@+id/orderview_totalprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:textColor="#909090"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    
                    
                    
                    
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="2.5dip" >
                        
                        <TextView
                            android:id="@+id/orderview_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dip"
                            android:textColor="#909090"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                
                
                
                
                <LinearLayout
                    android:id="@+id/linearLayoutqueren"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    android:visibility="gone"
                     >
                    <Button
                        android:id="@+id/buttonqueren"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:background="@android:color/holo_red_dark"
                        android:padding="10dip"
                        android:text="确认收货"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:onClick="queren_system"
                         />
                  
                </LinearLayout>
                
                
                <LinearLayout
                    android:id="@+id/linearLayoutquxiao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    android:visibility="gone"
                     >
                    <Button
                        android:id="@+id/buttonquxiao"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:background="@android:color/holo_red_dark"
                        android:padding="10dip"
                        android:text="取消订单"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:onClick="quxiao_system"
                         />
                  
                </LinearLayout>
                
                
                
                <LinearLayout
                    android:id="@+id/linearLayoutback"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dip" >

                    <Button
                        android:id="@+id/buttonback"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:background="@android:color/holo_red_dark"
                        android:onClick="product_back"
                        android:padding="10dip"
                        android:text="返回"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />
                  
                </LinearLayout>
                
                
	     
                
                
                
            </LinearLayout>
        </ScrollView>
        
    </RelativeLayout>
</LinearLayout>
        <activity
            android:name="com.shopping.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.shopping.activity.TabHostActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.shopping.activity.OrderActivity"
            android:label="@string/app_name" >

        <activity
            android:name="com.shopping.activity.PasswordActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.shopping.activity.UserinfoEditActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.shopping.activity.VistActivity"
            android:label="@string/app_name" >
        </activity>

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.shopping.activity.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>